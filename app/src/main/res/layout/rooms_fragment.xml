<com.sergeymild.allychat.view.rooms.RoomsListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="#eeeeee"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.sergeymild.allychat.view.rooms.NewChatFloatingActionButton
        android:id="@+id/new_room_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/white_plus"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/colorPrimaryDark"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"/>


</com.sergeymild.allychat.view.rooms.RoomsListView>
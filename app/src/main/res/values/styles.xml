<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="OpaqueButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:height">@dimen/opaque_button_height</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="OpaqueButton.Aquamarine">
        <item name="android:background">@drawable/aquamarine_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
